{
  "name": "quincarter",
  "description": "Webcomponent quincarter following open-wc recommendations",
  "license": "MIT",
  "author": "quincarter",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "npm run analyze -- --exclude dist && build-storybook",
    "build": "nx run-many --target=build",
    "tsc:watch": "nx run-many --target=tsc:watch",
    "new-component:js": "nx workspace-generator web-component --",
    "new-component:ts": "nx workspace-generator web-component-ts && yarn run build",
    "rimraf-dist": "rimraf packages/**/dist",
    "rimraf": "rimraf --",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "npm-run-all --parallel tsc:watch storybook",
    "lerna:build": "export ROOT_DIR=$(pwd) && rimraf packages/**/dist && lerna exec -- rollup -c $ROOT_DIR/rollup.config.js",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "lit": "^2.3.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/schematics": "^14.2.1",
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.16.4",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@nrwl/devkit": "14.5.10",
    "@nrwl/eslint-plugin-nx": "14.5.10",
    "@nrwl/jest": "14.5.10",
    "@nrwl/linter": "14.5.10",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/workspace": "^14.5.10",
    "@open-wc/building-rollup": "^2.0.1",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-cssresources": "^6.2.9",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/web-components": "^6.4.22",
    "@types/jest": "27.4.1",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-storybook": "next",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.13.22",
    "babel-loader": "^8.2.5",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "css-loader": "^6.7.1",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "jest": "27.5.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "nx": "14.6.0-rc.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0",
    "style-loader": "^3.3.1",
    "ts-jest": "27.1.4",
    "ts-node": "10.9.1"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json",
  "workspaces": [
    "packages/*"
  ]
}
